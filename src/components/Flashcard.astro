---
interface Props {
  title: string;
  description: string;
  isVisible: boolean;
  onClose: () => void;
}

const { title, description, isVisible, onClose } = Astro.props;
---

<div class={`flashcard-overlay ${isVisible ? 'active' : ''}`} onClick={onClose}>
  <div class="flashcard" onClick={(e) => e.stopPropagation()}>
    <button class="flashcard-close" onClick={onClose}>Ã—</button>
    <h3 class="flashcard-title">{title}</h3>
    <div class="flashcard-content">
      {description}
    </div>
  </div>
</div>

<style>
  .flashcard-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .flashcard-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  .flashcard {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    max-width: 600px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    position: relative;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }
  
  .flashcard-overlay.active .flashcard {
    transform: translateY(0);
  }
  
  .flashcard-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: #666;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s ease;
  }
  
  .flashcard-close:hover {
    background-color: #f0f0f0;
  }
  
  .flashcard-title {
    color: #1a202c;
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    padding-right: 2rem;
  }
  
  .flashcard-content {
    color: #4a5568;
    line-height: 1.6;
  }
  
  /* Dark mode styles */
  .dark .flashcard {
    background: #2d3748;
  }
  
  .dark .flashcard-title {
    color: #e2e8f0;
  }
  
  .dark .flashcard-content {
    color: #cbd5e0;
  }
</style>
