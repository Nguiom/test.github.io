---
const allPages = [
  { text: "M1 - Automatización e industria 4.0", url: "/Los4Automaticos/m1-automatizacion-industria-4-0" },
  { text: "M2 - Gestión de producción", url: "/Los4Automaticos/m2-gestion-de-produccion" },
  { text: "M3 - Planeación de proyecto", url: "/Los4Automaticos/m3-planeacion-de-proyecto" },
  { text: "M4 - Evaluación económica del proyecto", url: "/Los4Automaticos/m4-evaluacion-economica-del-proyecto" },
  { text: "M5 - Celdas de manufactura robotizadas", url: "/Los4Automaticos/m5-celdas-de-manufactura-robotizadas" },
  { text: "M6 - Virtualización de fábrica", url: "/Los4Automaticos/m6-virtualizacion-de-fabrica" },
  { text: "M7 - Controladores industriales", url: "/Los4Automaticos/m7-controladores-industriales" },
  { text: "M8 - Sistema de supevisión SCADA", url: "/Los4Automaticos/m8-sistema-de-supervision-scada" }
];
---
<header class="fixed w-full bg-primary-50 dark:bg-primary-950 backdrop-blur-xs z-50 py-4 transition-colors duration-300">
  <div class="container-custom flex items-center justify-between">
    <a href="/Los4Automaticos/" class="flex items-center" aria-label="Go to homepage">
      <!-- Imagen para modo claro -->
      <img
        src="https://imgur.com/jrOVLl5.jpg"
        alt="Logo Los 4 Automáticos modo claro"
        class="h-10 w-auto block dark:hidden border-0 border-secondary-700 rounded-md p-[1px]"
      />
      
      <!-- Imagen para modo oscuro -->
      <img
        src="https://imgur.com/jrOVLl5.jpg"
        alt="Logo Los 4 Automáticos modo oscuro"
        class="h-10 w-auto hidden dark:block border-0 border-info-900 rounded-md p-[1px]"
      />
      
      <span class="ml-2 text-xl font-display font-semibold text-info-50 dark:text-info-100">Los 4 Automáticos</span>
    </a>
    
    <nav class="hidden lg:flex items-center space-x-8">
      <!--
      <a href="/Mep_Mep_Riders_web/" class="text-secondary-600 hover:text-primary-600 dark:text-secondary-300 dark:hover:text-primary-400 font-medium transition-colors">Inicio</a>
      <a href="/Los4Automaticos/presentacion" class="text-secondary-600 hover:text-primary-600 dark:text-secondary-300 dark:hover:text-primary-400 font-medium transition-colors">Presentación</a>
      -->
      <a href="/Los4Automaticos/equipo" class="text-info-50 hover:text-info-200 dark:text-info-100 dark:hover:text-info-300 font-medium transition-colors">Equipo</a>
      <a href="/Los4Automaticos/contacto" class="text-info-50 hover:text-info-200 dark:text-info-100 dark:hover:text-info-300 font-medium transition-colors">Contáctenos</a>
      
      <!-- All Pages Dropdown -->
      <div x-data="{ open: false }" class="relative">
        <button 
          @click="open = !open" 
          @click.away="open = false"
          class="flex items-center text-info-50 hover:text-info-200 dark:text-info-100 dark:hover:text-info-300 font-medium transition-colors"
        >
          Módulos
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        
        <div 
          x-show="open" 
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-150"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
          class="absolute left-0 mt-2 w-56 bg-primary-50 dark:bg-primary-950 rounded-md shadow-lg ring-1 ring-info-600 dark:ring-info-700 ring-opacity-5 focus:outline-hidden z-50 max-h-96 overflow-y-auto"
          x-cloak
        >
          <div class="py-2 grid grid-cols-1 gap-1">
            {allPages.map(page => (
              <a href={page.url} class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-50 dark:hover:bg-secondary-300">
                {page.text}
              </a>
            ))}
          </div>
        </div>
      </div>
    
      <a href="https://github.com/JoseAlejandroRosero/Los4Automaticos" class="text-info-50 hover:text-info-200 dark:text-info-100 dark:hover:text-info-300 font-medium font-medium transition-colors">Repositorio</a>
      <a href="/Los4Automaticos/404" class="text-info-50 hover:text-info-200 dark:text-info-100 dark:hover:text-info-300 font-medium transition-colors">Reflexiones</a>
    </nav>
    
    <div class="flex items-center space-x-4">
      <button 
        x-on:click="darkMode = !darkMode" 
        class="p-2 rounded-full text-info-50 hover:text-info-800 dark:text-info-950 dark:hover:text-info-900 focus:outline-hidden focus:ring-2 focus:ring-primary-500"
        aria-label="Toggle dark mode"
      >
        <svg x-show="!darkMode" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <svg x-show="darkMode" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </button>
      
      <!--
      <a href="#signup" class="hidden sm:inline-flex btn-primary">Empezemos</a>
      -->
      
      <a href="/Los4Automaticos/" class="hidden lg:inline-flex btn-primary">Inicio</a>
      
      <!-- Mobile Menu Button and Dropdown -->
      <div x-data="{ open: false, showAllPages: false }">
        <button 
          @click="open = !open"
          class="lg:hidden p-2 rounded-md text-info-50 hover:text-info-600 dark:text-info-950 dark:hover:text-info-700 focus:outline-hidden focus:ring-2 focus:ring-info-950"
          aria-label="Toggle menu"
        >
          <svg x-show="!open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        
        <div 
          x-show="open" 
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-150"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
          class="absolute top-16 right-4 w-48 py-2 bg-primary-50 dark:bg-primary-950 rounded-md shadow-lg ring-1 ring-info-950 ring-opacity-5 focus:outline-hidden"
          x-cloak
        >

          <a href="/Los4Automaticos/" class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300">Inicio</a>
          <a href="/Los4Automaticos/presentacion" class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300">Presentación</a>
          <a href="/Los4Automaticos/contacto" class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300">Contáctenos</a>
          <a href="/Los4Automaticos/asignatura" class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300">Asignatura</a>
          <a href="https://github.com/JoseAlejandroRosero/Los4Automaticos" class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300">Repositorio</a>
          
          <!-- Mobile All Pages Dropdown -->
          <button 
            @click="showAllPages = !showAllPages" 
            class="w-full text-left px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300 font-semibold border-t border-accent-50 dark:border-accent-950 mt-1 pt-1 flex items-center justify-between"
          >
            Módulos
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" :class="{ 'transform rotate-180': showAllPages }">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <div 
            x-show="showAllPages" 
            class="py-1 bg-gray-50 dark:bg-primary-950"
          >
            {allPages.map(page => (
              <a href={page.url} class="block px-6 py-1 text-sm text-secondary-700 dark:text-secondary-300 hover:bg-secondary-100 dark:hover:bg-secondary-700">
                {page.text}
              </a>
            ))}
          </div>

          <a href="/Los4Automaticos/404" class="block px-4 py-2 text-sm text-info-50 dark:text-info-100 hover:bg-secondary-600 dark:hover:bg-secondary-300">Reflexiones</a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* Add styles for dark mode SVG in the header */
  @media (prefers-color-scheme: dark) {
    .dark\:fill-slate-800 { fill: #1e293b; }
    .dark\:fill-slate-600 { fill: #475569; }
    .dark\:fill-slate-500 { fill: #64748b; }
    .dark\:fill-slate-700 { fill: #334155; }
    .dark\:stroke-slate-300 { stroke: #cbd5e1; }
    .dark\:stroke-teal-500 { stroke: #14b8a6; }
    .dark\:fill-white { fill: #ffffff; }
  }
  
  /* Add hover animation to the logo */
  header a:hover svg {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }
  
  /* Hide Alpine.js elements before Alpine loads */
  [x-cloak] { display: none !important; }
</style>
